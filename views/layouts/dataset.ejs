<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs') -%>
  </head>

  <body class="">
    <div class="page">
      <div class="page-main">
        <%- include('../partials/header.ejs') -%>

        <div class="my-auto my-md-5">
          <div class="container">
            <div class="row">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Filter Kategori</h3>
                </div>
                <div class="form-group m-0 m-3">
                  <div class="selectgroup selectgroup-pills h-100">
                    <label class="selectgroup-item my-1">
                      <input
                        id="filter-all"
                        type="checkbox"
                        class="selectgroup-input"
                        checked="checked"
                      />
                      <span class="selectgroup-button">Semua</span>
                    </label>
                    <% for (const label of labels) { %>
                    <label class="selectgroup-item my-1">
                      <input
                        type="checkbox"
                        name="checkbox-filter"
                        label-id="<%= label._id %>"
                        class="selectgroup-input"
                        checked="checked"
                      />
                      <span class="selectgroup-button"><%= label.name %></span>
                    </label>
                    <% } %>
                  </div>
                </div>
              </div>

              <div class="card">
                <div class="card-header">
                  <h3 class="card-title"><%= title %></h3>
                </div>
                <div class="card-body">
                  <div class="row px-5">
                    <div class="col-12 col-sm text-center text-sm-left">
                      <button
                        id="btn-add"
                        type="button"
                        class="btn btn-primary m-1"
                        data-toggle="tooltip"
                        data-html="true"
                        data-placement="top"
                        data-original-title="Tambah Dokumen"
                      >
                        <i class="fe fe-plus"></i>
                      </button>
                      <button
                        id="btn-delete-checked"
                        type="button"
                        class="btn btn-gray m-1"
                        data-toggle="tooltip"
                        data-html="true"
                        data-placement="top"
                        data-original-title="Hapus Dokumen<br>yang ditandai"
                        disabled="disabled"
                      >
                        <i class="fe fe-trash-2"></i>
                      </button>
                    </div>
                    <div class="col-12 col-sm text-center text-sm-right">
                      <button
                        id="btn-download-dataset-template"
                        type="button"
                        class="btn btn-info"
                        data-toggle="tooltip"
                        data-html="true"
                        data-placement="top"
                        data-original-title="Download Template Excel"
                      >
                        <i class="fe fe-file"></i>
                      </button>
                      <button
                        id="btn-upload-dataset"
                        type="button"
                        class="btn btn-info"
                        data-toggle="tooltip"
                        data-html="true"
                        data-placement="top"
                        data-original-title="Upload Excel"
                      >
                        <i class="fe fe-upload"></i>
                      </button>
                      <input
                        id="input-excel-dataset"
                        type="file"
                        class="d-none"
                        accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"
                      />
                      <button
                        id="btn-download-dataset"
                        type="button"
                        class="btn btn-gray"
                        data-toggle="tooltip"
                        data-html="true"
                        data-placement="top"
                        data-original-title="Download Excel"
                        disabled="disabled"
                      >
                        <i class="fe fe-download"></i>
                      </button>
                    </div>
                  </div>
                  <div class="table-responsive p-5">
                    <table
                      id="table"
                      class="table table-hover card-table table-vcenter w-100"
                    >
                      <thead>
                        <tr>
                          <th class="text-center">
                            <input type="checkbox" id="check-all" />
                          </th>
                          <th class="text-center">No.</th>
                          <th class="text-center">Isi Berita</th>
                          <th class="text-center">Kategori</th>
                          <th class="text-center">Opsi</th>
                        </tr>
                      </thead>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer.ejs') -%>
    <script src="/js/views/dataset.js" type="module"></script>
  </body>
</html>
